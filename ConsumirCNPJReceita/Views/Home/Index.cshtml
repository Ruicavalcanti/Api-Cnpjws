
@{
    ViewBag.Title = "Home Page";
}


<section>
    <h5 style="margin-top:80px; margin-bottom:20px;"><strong>INFORMAÇÕES</strong></h5>
    <p class="text-danger" id="ErrorCnpj" style="margin-top:40px;"></p>
    <div class="row" >
        <div class="col-md-2">
            <label class="text-muted">Tipo </label>
            <select class="form-control" name="tipo_pessoa" id="tipoPessoa">
                <option value="Juridica"> Pessoa Jurídica</option>
                <option value="Fisica"> Pessoa Física</option>
                <option value="Rural"> Produtor Rural</option>
            </select>
        </div>
        <div class="col-md-3" id="divCNPJ">
            <label class="text-muted">CNPJ</label>
            <div class="form-inline">
                <input type="text" placeholder="Digite o CNPJ..." id="cnpj" class="form-control" />
                <input type="button" id="buscarCnpj" value="Buscar" />
            </div>
        </div>
        <div class="col-md-3" id="divCPF" style="display:none">
            <label class="text-muted">CPF</label>
            <div class="form-inline">
                <input type="text" placeholder="Digite o CPF..." id="cpf" name="cpf" class="form-control" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5" id="divRazao">
            <label class="text-muted">Razão Social</label>
            <input class="form-control" id="Razao_social" />
        </div>
        <div class="col-md-5" id="divNome" style="display:none;">
            <label class="text-muted">Nome</label>
            <input class="form-control" id="Nome" />
        </div>
        <div class="col-md-2" id="divNascimento" style="display:none;">
            <label class="text-muted">Data de Nascimento</label>
            <input type="date" class="form-control" id="Nascimento" maxlength="10" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2" id="divIE">
            <label class="text-muted">Inscrição Estadual</label>
            <div id="divSelect">
                <input class="form-control" id="IE" style="display:block" />
                <select id="IES" class="form-control" style="display:none"></select>
            </div>
        </div>
        <div class="col-md-2" id="divRG" style="display:none">
            <label class="text-muted">RG</label>
            <input class="form-control" id="RG" />
        </div>
        <div class="col-md-6" id="divFantasia">
            <label class="text-muted">Nome Fantasia</label>
            <input class="form-control" id="Fantasia" />
        </div>
        <div class="col-md-6" id="divApelido" style="display:none">
            <label class="text-muted">Apelido</label>
            <input class="form-control" id="Apelido" />
        </div>
    </div>
</section>
<section>
    <h5 style="margin-top:40px; margin-bottom:20px;"><strong>ENDEREÇO</strong></h5>
    <div class="row">
        <div class="col-md-2">
            <label class="text-muted mt-2">CEP</label>
            <input class="form-control" id="CEP" />
        </div>
        <div class="col-md-6">
            <label class="text-muted mt-2">Endereço</label>
            <input class="form-control" id="Endereco" />
        </div>
        <div class="col-md-2">
            <label class="text-muted">N°</label>
            <input class="form-control" id="Numero" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label class="text-muted">Bairro</label>
            <input class="form-control" id="Bairro" />
        </div>
        <div class="col-md-6">
            <label class="text-muted">Complemento</label>
            <input class="form-control" id="Complemento" />
        </div>
        <div class="col-md-2">
            <label class="text-muted">Cidade</label>
            <input class="form-control" id="Cidade" />
        </div>
    </div>
</section>
<section>
    <h5 style="margin-top:40px; margin-bottom:20px;"><strong>CONTATO</strong></h5>
    <div class="row">
        <div class="col-md-2">
            <label class="text-muted">Telefone</label>
            <input class="form-control" id="Telefone" />
        </div>
        <div class="col-md-6">
            <label class="text-muted">Email</label>
            <input class="form-control" id="Email" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <label class="text-muted">Observação</label>
            <input class="form-control" id="Observacao" />
        </div>
    </div>
</section>
<script src="~/Scripts/Receitaws.js"></script>
<script src="~/Scripts/main.js"></script>
<script src="~/Scripts/BuscarCep.js"></script>


